<!DOCTYPE html>
<html>
<head>
<title>用户登录</title>
<meta charset="utf-8">
<script src="http://static.360buyimg.com/finance/common/lib/jquery/1.8.3/jquery.js"></script>
</head>
<body>

<div style="height:300px;width:350px;margin:100px auto;margin-left:auto;border:solid 1px;background: rgb(246, 246, 253);">
    <div style="width:200px;margin:auto;margin-top:50px;">
        <%- message %>
        <h1>用户登录</h1>
        <form action="#" role="form" method="post" enctype="multipart/form-data">
            <input id="username" type="text" name="username" style="margin: 20px 0px;">
            <input id="password" type="password" name="password">
            <div style="margin-top:30px;margin-left:125px;">
                <input type="button" value="登 陆" onclick="login();">
            </div>
        </form>
    </div>
</div>

<script>
    function login(){
        var username = $('#username').val();
        var password = $('#password').val();
        var data = { "username": username, "password":password};
        $.ajax({
            url:'login',
            type:'POST',
            data:data,
            success:function(data,status){
                if(status == 'success'){
                    location.href='home';
                }
            },
            error:function(data,status,e){
                if(status == "error"){
                    location.href='login';
                }
            }
        });
    }
</script>

</body>
</html>